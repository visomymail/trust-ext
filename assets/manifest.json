{
    "manifest_version": 2,
    "name": "trust-ext",
    "description": "an extension to read some mail",
    "version": "1.0.0",
    "icons": {
        "16": "logo16.png",
        "48": "logo48.png",
        "128": "logo128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["tabs", "activeTab", "storage"]
}